@model List<Product>

@foreach (var product in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
            <div class="img">
                <a href="">
                    <img src="~/img/@product.Image" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@product.Name</h6>
            </div>
            <div class="price">
                <span class="text-black-50"><a id="addToCart" asp-controller="Basket" asp-action="AddToBasket" asp-route-id="@product.Id">Add to cart</a></span>
                <span class="text-black-50">@product.Price</span>
            </div>
        </div>
    </div>
}